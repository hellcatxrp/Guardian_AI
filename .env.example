# Guardian AI Configuration Example
# ===================================
# Copy this file to .env and fill in your actual API keys

# Google Gemini API Configuration (REQUIRED)
GOOGLE_API_KEY=your_google_gemini_api_key_here

# OpenAI API Configuration (Optional - for image generation fallback)
OPENAI_API_KEY=your_openai_api_key_here

# Speech Recognition Settings
SPEECH_TIMEOUT=10
SPEECH_PAUSE_THRESHOLD=1.0
SPEECH_MAX_RETRIES=3
SPEECH_CALIBRATION_DURATION=1.0
SPEECH_PHRASE_THRESHOLD=0.3
SPEECH_NON_SPEAKING_DURATION=0.8

# Text-to-Speech Settings
TTS_RATE=200
TTS_VOLUME=1.0
TTS_VOICE_INDEX=2

# AI Model Configuration
GEMINI_MODEL=gemini-1.5-flash

# Hotkey Configuration
INTERRUPT_HOTKEY=ctrl+i

# Application Settings
MAX_CONSECUTIVE_FAILURES=3
CONVERSATION_HISTORY_LIMIT=2

# Performance Settings
PERFORMANCE_MODE=fast
AI_REQUEST_TIMEOUT=15
ENABLE_PROGRESS_FEEDBACK=true
QUICK_RESPONSE_MODE=true
CONTEXT_THRESHOLD=5

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=guardian_ai.log

# Feature Flags (Optimized for Speed)
ENABLE_CONVERSATION_MEMORY=true
ENABLE_CONTEXT_AWARENESS=false
ENABLE_ENHANCED_INTENT_ANALYSIS=false
ENABLE_SMART_CONTEXT=true
ENABLE_KEYWORD_INTENT_ONLY=true

# Image Generation Settings (Optional)
# Path where generated images will be saved
# If not set, defaults to ./generated_images in the project directory
IMAGE_SAVE_PATH=

# Research API Keys (Optional but recommended for enhanced research capabilities)
SERPER_API_KEY=your_serper_api_key_here
BRAVE_SEARCH_API_KEY=your_brave_search_api_key_here

# Integration Keys (Optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# RSS Feed Configuration (Optional - for AI news aggregation)
